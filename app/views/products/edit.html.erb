<h1>Products#edit</h1>

<%= form_for @product do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :price_in_cents %><br>
		<%= f.number_field :price_in_cents %><br>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
